<%- include('../includes/head.ejs') %>

<body>
	<div class="main-container">
		<div class="body-minus-footer">
			<%- include('../includes/nav.ejs') %>
			<section class="welcome">
				<% if(errorMessage) { %>
				<div class="error-msg"><p><%= errorMessage %></p></div>
				<% } %>
				<h2>Log In</h2>
			</section>
			<form class="form" action="/login" method="POST">
				<div class="form-control form-control-log-sign">
					<label for="email">Email</label>
					<input class="<%= validationErrors.find(e => e.param ===
					"password") ? 'invalid': '' %>" type="text" name="email"
					id="email" value="<%= oldInput.email%>" />
				</div>
				<div class="form-control form-control-log-sign">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" />
				</div>
				<button class="btn auth-btn" type="submit">Login</button>
			</form>
		</div>
		<footer>
			<p>Website created by <a href="#">David Williamson</a></p>
		</footer>
	</div>
	<script src="/js/ui.js"></script>
</body>
