<%- include('./includes/head.ejs') %>
<body>
	<div class="main-container">
		<div class="body-minus-footer">
			<%- include('./includes/nav.ejs') %>
			<main>
				<div class="welcome">
					<h2>
						Welcome! Test your knowledge and see how you stack up
						<br />against user created quizzes
					</h2>
					<p>Click on a quiz below to get started</p>
				</div>

				<div class="quiz-list-main">
					<% for (let quiz of quizzes) { %>
					<section>
						<a href="/quizzes/<%= quiz._id %>">
							<div class="quiz-card">
								<div class="quiz-card-content">
									<div
										class="quiz-card-title <%= quiz.category %>"
									>
										<h2><%= quiz.title %></h2>
									</div>
									<div class="quiz-card-desc">
										<p><%- quiz.description%></p>
									</div>
									<div class="quiz-card-onhover">
										<p>Take the Quiz!</p>
									</div>
								</div>
							</div>
						</a>
					</section>
					<% } %>
				</div>
			</main>
			<%- include('./includes/pagination.ejs')%>
		</div>
		<footer>
			<p>Website created by <a href="#">David Williamson</a></p>
		</footer>
	</div>
	<script src="/js/ui.js"></script>
	<%-include('./includes/end.ejs')%>
</body>
